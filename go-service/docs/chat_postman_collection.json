{
  "info": {
    "name": "Go Chat API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GraphQL Chat Mutation",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-User-Id", "value": "1" },
          { "key": "X-User-Type", "value": "user" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"mutation { sendMessage(input: { roomId: \\\"1\\\", content: \\\"Hello!\\\", messageType: \\\"text\\\" }) { id content } }\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/graphql",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["graphql"]
        }
      }
    },
    {
      "name": "GraphQL File Upload",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-User-Id", "value": "1" },
          { "key": "X-User-Type", "value": "user" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "operations", "value": "{ \"query\": \"mutation ($file: Upload!) { uploadFile(input: { messageId: \\\"1\\\", file: $file }) { id fileName } }\", \"variables\": { \"file\": null } }", "type": "text" },
            { "key": "map", "value": "{ \"0\": [\"variables.file\"] }", "type": "text" },
            { "key": "0", "src": "test.pdf", "type": "file" }
          ]
        },
        "url": {
          "raw": "http://localhost:8080/graphql",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["graphql"]
        }
      }
    }
  ]
} 