# This is a template for your local environment variables.
# Create a file named .env in the project root and paste this content into it.
# Fill in your actual secret values and do NOT commit the .env file to version control.

# -- PostgreSQL Database --
# Used by Postgres, Node.js, Go, and Python services
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=mydb

# -- Node.js Service --
# Full database URL for Node.js and Go services
DATABASE_URL=postgres://user:password@postgres:5432/mydb
NODE_ENV=development

# Google OAuth Credentials (replace with your actual credentials from Google Cloud Console)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# Secret for signing session cookies
SESSION_SECRET=a_very_strong_and_long_random_string_for_session_secret

# 32-byte secret key for encrypting file paths and other sensitive data
ENCRYPTION_SECRET_KEY=a_very_strong_32_byte_secret_key_for_encryption

# -- Python Services --
# Full database URL for Python services (uses 'postgresql' scheme)
PYTHON_DATABASE_URL=postgresql://user:password@postgres:5432/mydb

# Key for Python's internal encryption/decryption functions
PYTHON_ENCRYPTION_KEY=c1a8e4b1a8e4b1a8e4b1a8e4b1a8e4b1c1a8e4b1a8e4b1a8e4b1a8e4b1a8e4b1

# -- pgAdmin --
# Credentials for the pgAdmin web interface
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin